# Zona de Genialidade Dashboard â€” Environment Variables
# Copy this file to .env.local and fill in your credentials

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project dashboard: https://supabase.com/dashboard

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key (safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Your Supabase service role key (KEEP SECRET!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Next.js environment
NODE_ENV=development

# App URL (for callbacks, CORS, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API endpoint (if different from app URL)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret for session management
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# GITHUB CONFIGURATION (for CI/CD)
# ============================================================================

GITHUB_TOKEN=your-github-token-here
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=zona-genius-dashboard

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable debug mode
DEBUG=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable chat integration
ENABLE_CHAT_INTEGRATION=true

# Enable gestor dashboard
ENABLE_GESTOR_DASHBOARD=true

# Enable export to PDF
ENABLE_PDF_EXPORT=true

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Sentry for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# PostHog for analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=
